{% extends 'base-back.html.twig' %}

{% block title %}Certificat{% endblock %}

{% block body %}
    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Certificat List </h4>
                        </div>
                        <div class="card-body">

                            <div class="container">
                                <h1 class="my-4">Certificat</h1>

                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ certificat.IdCertificat }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nom</th>
                                        <td>{{ certificat.nomCertificat }}</td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <th>Domaine</th>
                                        <td>{{ certificat.domaineCertificat }}</td>
                                    </tr>
                                    <tr>
                                        <th>Niveau</th>
                                        <td>{{ certificat.niveau }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date Obtention</th>
                                        <td>{{ certificat.dateObtentionCertificat ? certificat.dateObtentionCertificat|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Etablissment</th>
                                        <td>{{ certificat.idEtablissement.nomEtablissement }}</td>
                                    </tr>

                                    </tbody>
                                </table>

                                <div class="mt-3">
                                    <a href="{{ path('app_certificat_index_admin') }}" class="btn btn-secondary">Retour</a>
                                    <a href="{{ path('app_certificat_edit', {'idCertificat': certificat.IdCertificat}) }}" class="btn btn-primary">Modifier</a>
                                </div>

                                {{ include('back/certificat/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
