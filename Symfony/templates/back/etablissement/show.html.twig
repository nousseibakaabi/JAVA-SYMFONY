{% extends 'base-back.html.twig' %}

{% block title %}Etablissement{% endblock %}

{% block body %}
<div class="content-body">
    <!-- row -->
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Etablissement Detail </h4>
                    </div>
                    <div class="card-body">

                    <div class="container">
                        <h1 class="my-4">Etablissement</h1>

                        <table class="table">
                            <tbody>
                                                        <tr>
                                {{ include('front/etablissement/mapf.html.twig') }}
                            </tr>     
                            <tr>
                                <th>Id</th>
                                <td>{{ etablissement.idEtablissement }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td><img src="{{ asset('uploads/images/' ~ etablissement.imgEtablissement) }}" alt="Image" width="500" ></td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ etablissement.nomEtablissement }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ etablissement.adresseEtablissement }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>{{ etablissement.typeEtablissement }}</td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td>{{ etablissement.telEtablissement }}</td>
                            </tr>
                            <tr>
                                <th>Directeur</th>
                                <td>{{ etablissement.directeurEtablissement }}</td>
                            </tr>
                            <tr>
                                <th>Date de fondation</th>
                                <td>{{ etablissement.dateFondation ? etablissement.dateFondation|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="mt-3">
                            <a href="{{ path('app_etablissement_index_admin') }}" class="btn btn-secondary">Retour</a>
                            <a href="{{ path('app_etablissement_edit', {'id': etablissement.idEtablissement}) }}" class="btn btn-primary">Modifier</a>
                        </div>

                        {{ include('back/etablissement/_delete_form.html.twig') }}
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
