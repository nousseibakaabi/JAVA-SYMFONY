            {{ form_widget(form.date_d, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.date_d)|length > 0 %}
                <div class="alert alert-danger">{{ form_errors(form.date_d) }}</div>
            {% endif %}
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            {{ form_label(form.date_f, 'End Date') }}
