    {% endif %}
</div>
<div class="form-group">
    {{ form_label(form.pdfFile, 'PDF File', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.pdfFile, {'attr': {'class': 'form-control-file'}}) }}
    {% if form_errors(form.pdfFile)|length > 0 %}
        <div class="alert alert-danger">{{ form_errors(form.pdfFile)|join('<br>') }}</div>
    {% endif %}
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">{{ button_label }}</button>
    <a href="{{ path('app_formation_index') }}" class="btn btn-secondary">Retour</a>
</div>

{{ form_end(form) }}

{% if form.vars.errors|length > 0 %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
    </div>
{% endif %}
