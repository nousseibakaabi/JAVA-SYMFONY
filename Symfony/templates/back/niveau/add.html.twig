{% extends 'base-back.html.twig' %}
{% block title %}New Level{% endblock %}

{% block body %}
   <div class="content-body">
       <!-- row -->
       <div class="container-fluid">
           <div class="row page-titles mx-0">
               <div class="col-sm-6 p-md-0">
                   <div class="welcome-text">
                       <h4>Add Level</h4>
                   </div>
               </div>
               <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                   <ol class="breadcrumb">
                       <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                       <li class="breadcrumb-item active"><a href="javascript:void(0);">Levels</a></li>
                       <li class="breadcrumb-item active"><a href="javascript:void(0);">Add Level</a></li>
                   </ol>
               </div>
           </div>
           <div class="row">
               <div class="col-xl-12 col-xxl-12 col-sm-12">
                   <div class="card">
                       <div class="card-header">
                           <h5 class="card-title">Add Level</h5>
                       </div>
                       <div class="card-body">
                           <div class="row">
                               <div class="col-lg-6 col-md-6 col-sm-12">
                                   {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                                   <div class="form-group">
                                       {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                                       {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                       {% for error in form.name.vars.errors %}
                                           <div class="alert alert-danger">{{ error.message }}</div>
                                       {% endfor %}
                                   </div>
                                   <div class="form-group">
                                       {{ form_label(form.prerequis, 'Prerequisites', {'label_attr': {'class': 'form-label'}}) }}
                                       {{ form_widget(form.prerequis, {'attr': {'class': 'form-control'}}) }}
                                       {% for error in form.prerequis.vars.errors %}
                                           <div class="alert alert-danger">{{ error.message }}</div>
                                       {% endfor %}
                                   </div>
                                   <div class="form-group">
                                       {{ form_label(form.duree, 'Duration', {'label_attr': {'class': 'form-label'}}) }}
                                       {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                                       {% for error in form.duree.vars.errors %}
                                           <div class="alert alert-danger">{{ error.message }}</div>
                                       {% endfor %}
                                   </div>
                                   <div class="form-group">
                                       {{ form_label(form.nbformation, 'Number of Training', {'label_attr': {'class': 'form-label'}}) }}
                                       {{ form_widget(form.nbformation, {'attr': {'class': 'form-control'}}) }}
                                       {% for error in form.nbformation.vars.errors %}
                                           <div class="alert alert-danger">{{ error.message }}</div>
                                       {% endfor %}
                                   </div>
                                   <div class="form-group">
                                       {{ form_label(form.certificat, 'Certificate', {'label_attr': {'class': 'form-label'}}) }}
                                       {{ form_widget(form.certificat, {'attr': {'class': 'form-control'}}) }}
                                       {% for error in form.certificat.vars.errors %}
                                           <div class="alert alert-danger">{{ error.message }}</div>
                                       {% endfor %}
                                   </div>
                                   <div class="form-group">
                                       {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                       {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                       {% for error in form.description.vars.errors %}
                                           <div class="alert alert-danger">{{ error.message }}</div>
                                       {% endfor %}
                                   </div>
                                   <div class="form-group">
                                       {{ form_label(form.image, 'Picture', {'label_attr': {'class': 'form-label'}}) }}
                                       {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                                       {% for error in form.image.vars.errors %}
                                           <div class="alert alert-danger">{{ error.message }}</div>
                                       {% endfor %}
                                   </div>
                               </div>
                           </div>
                           <div class="col">
                               {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                           </div>
                           {{ form_end(form) }}
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
{% endblock %}
