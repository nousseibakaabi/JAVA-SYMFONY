{% extends 'base-back.html.twig' %}

{% block title %}Ajouter Quiz{% endblock %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <!-- Page Title and Breadcrumbs -->
            </div>
            <div class="row">
                <div class="col-xl-12 col-xxl-12 col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Ajouter Quiz</h4>
                            <hr>
                            {{ form_start (form, {'attr': {'novalidate': 'novalidate'}})}}

                            <div class="form-group">
                                {{ form_label(form.question1) }}
                                {{ form_widget(form.question1, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.question1) %}
                                    <div class="text-danger">{{ form_errors(form.question1) }}</div>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.answer1) }}
                                {{ form_widget(form.answer1, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.answer1) %}
                                    <div class="text-danger">{{ form_errors(form.answer1) }}</div>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.question2) }}
                                {{ form_widget(form.question2, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.question2) %}
                                    <div class="text-danger">{{ form_errors(form.question2) }}</div>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.answer2) }}
                                {{ form_widget(form.answer2, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.answer2) %}
                                    <div class="text-danger">{{ form_errors(form.answer2) }}</div>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.question3) }}
                                {{ form_widget(form.question3, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.question3) %}
                                    <div class="text-danger">{{ form_errors(form.question3) }}</div>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.answer3) }}
                                {{ form_widget(form.answer3, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.answer3) %}
                                    <div class="text-danger">{{ form_errors(form.answer3) }}</div>
                                {% endif %}
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
