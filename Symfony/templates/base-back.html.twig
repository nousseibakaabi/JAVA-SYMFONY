<!DOCTYPE html>
<html lang="en">

<head>
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}
    <style>
        .user-photo {
            width: 50px; /* Adjust the width as needed */
            height: 50px; /* Adjust the height as needed */
            border-radius: 50%; /* Make the image round */
        }
    </style>

    {% include 'back/header.html.twig' %}
</head>

<body>

<div id="main-wrapper">

    <div class="nav-header">
        <a href="{{ path('app_index_admin') }}" class="brand-logo">
            <img class="logo-abbr" src="{{ asset('back/images/logo.png') }}" alt="" length="40">
        </a>

        <div class="nav-control">
            <div class="hamburger">
                <span class="line"></span><span class="line"></span><span class="line"></span>
            </div>
        </div>
    </div>
    <div class="header">
        <div class="header-content">
            <nav class="navbar navbar-expand">
                <div class="collapse navbar-collapse justify-content-between">
                    <div class="header-left">
                        <div class="search_bar dropdown">
                                <span class="search_icon p-3 c-pointer" data-toggle="dropdown">
                                    <i class="mdi mdi-magnify"></i>
                                </span>
                            <div class="dropdown-menu p-0 m-0">
                                <form>
                                    <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                                </form>
                            </div>
                        </div>
                    </div>

                    <ul class="navbar-nav header-right">
                        <li class="nav-item dropdown notification_dropdown">
                            <a class="nav-link bell ai-icon" href="#" role="button" data-toggle="dropdown">
                                <svg id="icon-user" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-bell">
                                    <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                                    <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                                </svg>
                                <div class="pulse-css"></div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <ul class="list-unstyled">
                                    {% if usersConnected is defined %}
                                        {% for user in usersConnected %}
                                            <li class="media dropdown-item">
                                                <img src="{{ asset('uploads/images/' ~ user.image) }}" alt="User Photo" class="user-photo">
                                                <div class="media-body">
                                                    <a href="#">
                                                        <p><strong>{{ user.name }}</strong> {{ user.text }}</p>
                                                    </a>
                                                </div>
                                                <span class="notify-time">{{ user.date|date('H:i') }}</span>
                                            </li>
                                        {% endfor %}
                                    {% endif %}
                                    {% if notifications is defined %}
                                        {% for notification in notifications %}
                                            <li class="media dropdown-item">
                                                <div class="media-body">
                                                    <a href="#">
                                                        <p style="white-space: normal;">{{ notification.text }}</p>
                                                    </a>
                                                </div>
                                            </li>
                                        {% endfor %}
                                    {% endif %}
                                </ul>
                            </div>

                        </li>
                        <li class="nav-item dropdown header-profile">
                            <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                                <img src="{{ asset('uploads/images/' ~ app.user.image) }}" width="20" alt="">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a href="{{ path('app_myprofile_admin') }}" class="dropdown-item ai-icon">
                                    <svg id="icon-user1" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                    <span class="ml-2">Profile </span>
                                </a>
                                <a href="{{ path('app_logout') }}" class="dropdown-item ai-icon">
                                    <svg id="icon-logout" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                                    <span class="ml-2">Logout </span>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    {% include 'back/sidebar.html.twig' %}

    {% block body%}
    {% endblock %}

    <div class="footer">
        <div class="copyright">
            <p>Copyright Â© Designed &amp; Developed by <a href="{{ path('app_index_admin') }}" target="_blank">TANIT ONLINE</a> 2024</p>
        </div>
    </div>



</div>
<script src="{{ asset('back/vendor/global/global.min.js') }}"></script>
<script src="{{ asset('back/vendor/bootstrap-select/dist/js/bootstrap-select.min.js') }}"></script>
<script src="{{ asset('back/js/custom.min.js') }}"></script>
<script src="{{ asset('back/js/dlabnav-init.js') }}"></script>

<!-- Chart sparkline plugin files -->
<script src="{{ asset('back/vendor/jquery-sparkline/jquery.sparkline.min.js') }}"></script>
<script src="{{ asset('back/js/plugins-init/sparkline-init.js') }}"></script>

<!-- Chart Morris plugin files -->
<script src="{{ asset('back/vendor/raphael/raphael.min.js') }}"></script>
<script src="{{ asset('back/vendor/morris/morris.min.js') }}"></script>

<!-- Init file -->
<script src="{{ asset('back/js/plugins-init/widgets-script-init.js') }}"></script>

<!-- Demo scripts -->
<script src="{{ asset('back/js/dashboard/dashboard.js') }}"></script>

<!-- Summernote -->
<script src="{{ asset('back/vendor/summernote/js/summernote.min.js') }}"></script>
<!-- Summernote init -->
<script src="{{ asset('back/js/plugins-init/summernote-init.js') }}"></script>

<!-- Svganimation scripts -->
<script src="{{ asset('back/vendor/svganimation/vivus.min.js') }}"></script>
<script src="{{ asset('back/vendor/svganimation/svg.animation.js') }}"></script>
<script src="{{ asset('back/js/styleSwitcher.js') }}"></script>

</body>
</html>