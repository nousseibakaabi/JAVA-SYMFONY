            <img src="{{ asset('icons/social media/twitter.png') }}" alt="Twitter">
        </a>
        <a href="https://www.linkedin.com/sharing/share-offsite/?url=http://192.168.1.18:8000/partner/&summary=bonjour">
            <img src="{{ asset('icons/social media/linkedin.png') }}" alt="Linkedin">
        </a>
