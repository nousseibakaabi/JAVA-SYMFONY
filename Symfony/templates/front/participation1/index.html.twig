{% extends 'base-front.html.twig' %}

{% block title %}Participation1 index{% endblock %}

{% block body %}
<div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">

    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">History of participations</h4>
                        </div>
                        <div class="card-body">
                            <a href="{{ path('app_participation1_new') }}" class="btn btn-success">Create New</a>

                            <div class="table-responsive">
                                <table class="table table-sm mb-0 table-striped">
        <thead>
            <tr>
                
                <th>Student</th>
                <th>Level</th>
                <th>Date</th>
                <th>Participation Status</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation1 in participation1s %}
            <tr>
                
                <td>{{ participation1.student.name }}</td>
                <td>{{ participation1.level.name }}</td>
                <td>{{ participation1.startdate ? participation1.startdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ participation1.participationstatus }}</td>
                <td>{{ participation1.comment }}</td>
                <td>
                    <a href="{{ path('app_participation1_edit', {'id': participation1.id}) }}" class="btn btn-sm btn-primary"><i class="la la-eye"></i></a>
                    
                    {# Delete Button #}
                                                <form action="{{ path('app_participation1_delete', {'id': participation1.id}) }}" method="post" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participation1.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                                                        <i class="la la-trash"></i>
                                                    </button>
                                                </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}
