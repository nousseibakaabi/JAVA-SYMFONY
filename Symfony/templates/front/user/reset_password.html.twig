{% extends 'base-front.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <a href="{{ path('app_index') }}" class="sign__logo">
                            <img src="{{ asset('back/images/logo.png') }}" alt="Logo">
                        </a>

                        <h5 class="card-title">Réinitialisation du mot de passe</h5>
                        <div class="sign__group">
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>
                        <form method="post" action="{{ path('app_reset_password_submited') }}" class="sign__form">
                            <div class="row">
                                <div class="col-md">
                                    <input type="email" class="form-control mb-3" name="email" id="inputEmail" autocomplete="email"  autofocus placeholder="Adresse email">
                                </div>
                            </div>

                            <button  class="btn btn-lg btn-primary btn-block sign__btn" type="submit">{{ button_label|default('Réinitialiser') }}</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Réinitialisation avec question de sécurité</h5>
                        {% for message in app.flashes('errorForm') %}
                            <div class="alert alert-danger" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-md">
                                {{ form_row(form.email, {'label': 'Email', 'attr': {'class': 'form-control mb-3'}}) }}
                                {{ form_row(form.question, {'label': 'Question de sécurité', 'attr': {'class': 'form-control mb-3'}}) }}
                                {{ form_row(form.answer, {'label': 'Réponse', 'attr': {'class': 'form-control mb-3'}}) }}
                            </div>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block">{{ button_label|default('Réinitialiser') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
